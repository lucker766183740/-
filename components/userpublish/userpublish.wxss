/* components/userpublish/userpublish.wxss */
@import '../../style//icon.wxss';
.con{
  width: 100%;
  height:15rpx;
  background-color: #eee;
  float: left;
  margin-bottom: 20rpx;
}
.user-name{
  padding: 0 20rpx;
  width: 100%;
  display: flex;
  text-align: center;
  align-items: center;
  font-size: 28rpx;
  line-height: 90rpx;
}
.user-name>image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.user-name>text{
  font-size: 32rpx;
  font-weight: bold;
color: #333;
padding: 0 30rpx 0 20rpx;
}
.icon-user{
  color: #038005;
  font-size: 28rpx;
}
.user-details text{
color: #111;
font-size: 28rpx;
margin-left: 40rpx;
}
.user-details image{
  width: 750rpx;
  height: 375rpx;
}
.padding{
  margin: 0 20rpx;
}
.user-card{
  color: #038005;
  display: inline;
  margin-left: 5rpx;
  font-size: 28rpx;
}
.detail_image{
  width: 90%;
  margin: 0 auto;
  display: flex;
  justify-content: start;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.detail_image image{
  border: 5rpx solid #fff;
  box-sizing: border-box;
}
.moreImg{
  width:32% !important;
  height: calc(750rpx / 3.5) !important;
  background-size: cover;
  border: 5rpx solid #fff;
  border-radius: 10rpx;
}
.user-Fabulous{
color: #555;
float: right;
margin-right: 35rpx;
display: flex;
line-height: 100rpx;
}
.user-Fabulous text{
  margin-left: 5rpx;
}
.user_dianzan , .user_pinglun{
  margin:0 30rpx ;
}
.icon-shixinwujiaoxing {
  color: orange;
  font-size: 50rpx;
}
.icon-xiaoxi{
  font-size: 40rpx;
}
.icon-kongxinwujiaoxing{
  font-size: 50rpx;
}
.icon-dianzan1 , .icon-xinaixin{
  font-size: 45rpx;
}
.pub_zhanshi{
  color: red !important;
  font-size: 45rpx;
}
.zhankai_show{
  color:#0557C7 !important; 
}