/* pages/circle/details/details.wxss */
.details-header{
  width: 100%;
  margin-top: 30rpx;
  display: flex;
}
.details-header>image{
  width: 300rpx;
  height: 300rpx;
  border: 20rpx solid #fff;
}
.details-title{
  width: 450rpx;
  box-sizing: border-box;
  padding: 0  20rpx;
}
.details-title>text{
  display: block;
  font-size: 28rpx;
  color: #aaa;
  line-height: 40rpx;
}
.details-name{
  font-size:32rpx !important;
  font-weight: bold;
  line-height: 70rpx !important;
  color: #333 !important;
}
.details-shoucang{
  width: 100%;
  border-top: 2rpx solid #aaa;
  font-size: 24rpx;
  color:#aaa;
  display: flex;
  justify-content: space-around;
  margin-top: 15rpx;
  line-height: 40rpx;
}
.details-shoucang>text{
  padding: 7rpx 15rpx;
  margin-top: 10rpx;
}
.details-shoucang2{
  /* background-color: #2A82E4; */
  background-color: #ddd;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0rpx 15rpx;
  border-radius: 30rpx;
  margin-top: 10rpx;

}
.details-shoucang2>icon{
  font-size: 24rpx;
margin-top: -10rpx;
margin-right: 10rpx;
}
.icon-xinaixin{
  color: red;
}
.icon-kongxinwujiaoxing{
  font-size: 37rpx !important;
}
.details-body{
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}
.details-content{
margin-right: 30rpx;
padding-bottom: 10rpx;
color: #aaa;
}
.active{
  font-weight: bold;
  color: #333;
  border-bottom: 10rpx solid #2A82E4;
  padding-bottom: 10rpx;
}
.active_hide{
  display: none;
}
.active_show{
  display: block;
}
.details-introduce{
  margin-left: 30rpx;
  padding-bottom: 10rpx;
  color: #aaa;
}
.details-jianjie{
  padding: 20rpx;
}
.details-jianjie-title{
  font-size: 28rpx;
  font-weight: 550rpx;
  display: block;
}
.details-jianjie-text{
  font-size: 28rpx;
  line-height: 30rpx;
  text-indent: 40rpx;

}
.ishidden{
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2; /*设置超出两行进行隐藏*/
}
.details-bofang{
  background-color: #86C0FD;
  padding: 7rpx 15rpx;
  font-size: 28rpx;
  color: #fff;
  border-radius: 5rpx;
}
.bofangquanbu{
  padding: 10rpx 50rpx;
  box-sizing: border-box;
}
.details_label_open{
  color: #2A82E4;
  font-size: 28rpx;
}
.details-sort{
  float: right;
  font-size: 28rpx;
  color: #2A82E4;
}
.icon-paixu,.iconfont{
  font-size: 24rpx;

}
.binddeg{
  position: relative;
  top: 25rpx;
  transform: rotate(180deg);
}
.details-card{
  display: flex;
  justify-content: space-between;
  margin: 10rpx 50rpx;
  padding:30rpx 0;
  border-bottom: 2rpx solid #ddd;
}
.buyu{
  font-size: 28rpx;
  color: #333;
}
.icon-yinpin{
  color: #0dd;
}
.bofangdate{
  font-size: 22rpx;
  color: #aaa;
}
.details-gif{
  margin-left: 20rpx;
  margin-top: 5rpx;
  width:50rpx;
  height: 23rpx;
}
.bofang{
width: 42rpx;
border: 2rpx solid #2A82E4;
padding: 3rpx 20rpx;
font-size: 18rpx;
color: #2A82E4;
margin-top: 10rpx;
}
.details-bgpink{
  background-color: pink;
  color: #fff;
}