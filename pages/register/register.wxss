/* pages/register/register.wxss */
.zc_title{
  font-size: 42rpx;
  font-weight: bold;
  text-align: center;
  line-height: 250rpx;
}
.user_content{
  color: #000;
  font-size: 26rpx;
  font-weight: bold;
  padding: 0 40rpx;
}
.input{
  font-weight: 500;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #2A82E4;
  position: relative;
}
.zc_shenf{
  margin: -10rpx 40rpx 35rpx 40rpx;
  padding-bottom:20rpx;
  font-size: 26rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #2A82E4;
  position: relative;
}
.zc_shenf .iconfont{
position: absolute;
color: #aaa;
right: 0rpx;
top: -11rpx;
}
.qm{
  display: inline-block;
  line-height: 25rpx;
  width: 65vw;
  font-weight: 500;
  padding: 0 40rpx;
  color: #aaa;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.zc_yanzheng{
  background-color: #2A82E4;
  font-weight: 300;
  color: #fff;
  padding: 5rpx 20rpx;
  border-radius: 10rpx;
  position: absolute;
  right: 0rpx;
  top: 10rpx;
  z-index: 999;
}
.float{
  float: right;
  margin-right: 40rpx;
}
.btn{
  display: inline-block;
  text-align: center;
  background-color: #2A82E4;
  border-radius:10rpx ;
  padding: 15rpx 200rpx;
  position: relative;
  left: 50%;
  transform: translate(-50%);
  color: #fff;
  margin: 50rpx 0 ;
}