/* pages/login/login.wxss */
/* background:linear-gradient(to bottom,#FCAD6E 1%, #FA895F 10% , #F64241 50%, #fff); */
.bg_image{
  width: 100vw;
  height: 100vh;
  position: fixed;
  z-index: -1;
}
.login-container{
width: 100%;
height: 100%;
}
.login_title{
  width: 100%;
  height: 300rpx;
}
.login-container2{
width: 85%;
margin: 0rpx auto;
padding-top: 50%;
}
.login-account{
  margin-bottom: 15rpx;
}
.login-account>text,.login-password>text{
color: #ffffff;
font-size: 28rpx;
}
.login-account>input,.login-password{
  border-bottom: 3rpx solid #ffffff;
}

.login-password>view{
  display: flex;
}
.login-password>view>input{
  width: 430rpx;
}
.login-password>view>text{
  font-size: 24rpx;
  text-align: end;
  color: #ffffff;
}

.otherlogintype{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}
.otherlogintype text{
  font-size: 28rpx;
  color: #fff;
  line-height: 40rpx;
}
.btn1{
  margin-top:25rpx ;
  border-radius: 30px !important;
  color: #F64742;
  letter-spacing: 40rpx;
  background: #fff;
  text-align: center;
  width: 70%;
  margin: 25rpx auto 20rpx auto;
  padding: 15rpx 10rpx 15rpx 55rpx;
  font-weight: bold;
  font-size: 43rpx;
}
.btn2{
  margin-top:40rpx ;
  border-radius: 30px !important;
  color: #F64742;
  padding: 10rpx 20rpx 10rpx 20rpx !important;
  letter-spacing: 10rpx;
}
.input-placeholder{
  color: rgba(255,255,255,.4);
  /* padding-left: 20rpx; */
  font-size: 24rpx;
}
input{
  color: #ffffff;
  padding-left: 20rpx;
  height: 70rpx;
}
.register{
  line-height: 120rpx;
  text-align: end;
  margin-right: 10%;
}
.register text{
font-size: 26rpx;
margin-right: 25rpx;
color: #fff;
white-space: nowrap;
}
.btn{
  background-color: #fff;
  padding: 10rpx 35rpx;
  color: #F64742 !important;
  font-size: 20rpx !important;
  border-radius: 30rpx;
}
.act_text{
  position: fixed;
  bottom: 3%;
  font-size: 20rpx;
}
.act_text view{
  width: 100vw;
  display: block;
  text-align: center;
  letter-spacing: 5rpx;
}
.act_text view:first-child{
  font-size: 24rpx;
  margin-bottom: 20rpx;
  font-weight: 550;
}
.navigator{
  display: inline;
  color: #F64742;
}



