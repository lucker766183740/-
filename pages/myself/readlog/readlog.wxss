/* pages/myself/readlog/readlog.wxss */
.container{
  display: flex;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 10rpx;
  padding: 0 10rpx 10rpx;
}
.read_image{
  width: 80rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.read_image image{
  width: 100%;
  height: 100%;
}
.read_body{
  display: block;
  width: 350rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.read_body .title{
  line-height: 50rpx;
  display:block;
  font-weight: bold;
  font-size: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.read_body .chapter{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 26rpx;
  margin-right: 40rpx;
  color: #333;
}
.read_body .time{
  font-size: 28rpx;
  color: #333;
}
.read_footer{
  color: #333;
  font-size: 24rpx;
line-height: 100rpx;
}