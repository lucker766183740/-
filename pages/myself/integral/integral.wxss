/* pages/myself/integral/integral.wxss */
.header{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #FF5733;
  text-align: center;
}
.header>view,.header text{
  color: #fff;
  line-height: 60rpx;
}
.integral_detail{
  display: flex;
  justify-content: space-between;
}
.number_count{
  font-size:75rpx;
  line-height: 150rpx !important;
}
.integral_rule{
  width: 100%;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.integral_rule>text{
  font-size: 32rpx;
  font-weight: bold;
  color: #555;
}
.getintegral{
  font-size: 24rpx;
}
.getintegral text+text{
  color: red;
}
.task_content{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:  20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
}
.white_text{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #777;
}
.dayTask{
  width: 75%;
}
.dayTask>view{
  font-weight: bold;
  line-height: 40rpx;
}
.dayTask>view+view{
  font-size: 26rpx;
  font-weight: 500;
}
.task_progress{
  display: flex;
  width: 100%;
}
.task_progress>text{
  color: #333;
}
.progress{
  margin-top: 16rpx;
  width: 140rpx;
  border-radius: 8rpx;
  height: 15rpx;
  margin:12.5rpx 20rpx 0rpx;
  background-color: #eee;
}
.progress_active{
  width: 50%;
  height: 100%;
  background-color: #FF5733;
  border-radius: 8rpx;
}
.task_btn{
  height: 65rpx;
  font-size: 28rpx;
  color: #fff;
  font-weight: normal;
  padding: 0;
}