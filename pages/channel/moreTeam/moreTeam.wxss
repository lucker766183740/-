/* pages/channel/moreTeam/moreTeam.wxss */
.team {
  display: flex;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
}

.team-id {
  width: 80rpx;
  line-height: 100rpx;
  color: #444;
  font-size: 40rpx;
  font-weight: bold;
  box-sizing: border-box;
}

.team-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.team-image>image {
  width: 100%;
  height: 100%;
  border-radius: 5%;
}

.team-details {
  width: 370rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.team-name,
.team-people {
  display: block;
  line-height: 50rpx;
  font-size: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.team-people {
  color: #777;
  font-size: 22rpx;
}

.team-guanzhu {
  line-height: 100rpx;
  float: right;
}

.team-guanzhu>text {
  background-color: #ccc;
  padding: 8rpx 30rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
}
.Activetext{
  background-color: red !important;
  color: #fff;
}

.activeColor {
  color: red !important;
  font-size: 52rpx !important;
  font-style: italic;
}