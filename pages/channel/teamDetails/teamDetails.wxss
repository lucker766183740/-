/* pages/channel/teamDetails/teamDetails.wxss */


.header-icon{
  width: 100%;
  position: fixed;
  display: block;
  top: 0;
  height: 160rpx;
  z-index: 999;
}
.title{
  position: absolute;
  top: 100rpx;
  left: 20%;
  font-weight: bold;
  color: #555;
}
.icon-jiantou{
margin: 100rpx 0 0 15rpx;
font-weight: bold;
transform: rotate(180deg);
background: transparent;
}
.details-headerImage{
  display: flex;
  width: 750rpx;
  height: 375rpx;
  position: relative;
  /* background-color:rgba(204, 119, 247, .5); */
  align-items: center;
}
.bg_color{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 99;
  background-color:rgba(100, 100, 100, .2);
}
.details_group{
  width: 300rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  position: absolute;
  z-index: 100;
  margin-left: 200rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 1rpx 1rpx #aaa;

}
.details-headerImage>image{
  position: absolute;
  z-index: 100;
  width: 130rpx;
  height: 130rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;
}

.details-image-text{
width: 100%;
position: absolute;
z-index: 100;
bottom: 40rpx;
right: 0;
}
.details-countsData{
  display: flex;
}
.details-countsData view{
display: block;
width: 180rpx;

}
.details-countsData text{
  font-weight: 600;
  color: #fff;
  font-size: 24rpx;
  text-shadow: 1rpx 1rpx #aaa;

}

.details-buttons{
  position: absolute;
  margin-left: 520rpx;
  z-index: 100;
  background-color: #fff;
  color: #333;
  padding: 10rpx 40rpx;
  opacity: .8;
  border-radius: 30rpx;
  font-size: 22rpx;
}
.Activetext{
  background-color: #db2425 !important;
  color: #fff;
}
.details-publish{
  margin-top: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}